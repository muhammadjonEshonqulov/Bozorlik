<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/back_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cl_color_primary"
    android:orientation="horizontal">

<!--    <de.hdodenhof.circleimageview.CircleImageView-->
<!--        android:id="@+id/img_user_drawer"-->
<!--        android:layout_width="55dp"-->
<!--        android:layout_height="55dp"-->
<!--        android:layout_margin="@dimen/left_right_margin_size"-->
<!--        android:src="@drawable/ic_place_holder_img" />-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/left_right_margin_size"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_marginBottom="@dimen/left_right_margin_size"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_name_header"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/left_right_margin_size"
            android:layout_height="match_parent"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="30dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/img_night_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/left_right_margin_size"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginEnd="@dimen/left_right_margin_size"
        android:foreground="?selectableItemBackgroundBorderless"
        android:layout_marginBottom="@dimen/left_right_margin_size"
        android:padding="10dp"
        android:src="@drawable/ic_sun" />
</RelativeLayout>